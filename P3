balance = 320000
annualInterestRate = 0.2

monthlyInterestRate = annualInterestRate/12.0
lo = balance/12
hi = (balance*(1+monthlyInterestRate)**12)/12.0
orbalance=balance
Total = 0
epsilon = 0.0001
miniPayment=(lo+hi)/2.0

while abs(balance)>= epsilon:
    balance=orbalance
    #print(balance)
    for m in range(1,13):
        unpaidBalance=balance-miniPayment
        Interest=unpaidBalance*monthlyInterestRate
        balance=unpaidBalance+Interest
        Total+=miniPayment
        #print(str(Total)+' ; '+str(balance)+' ; '+str(miniPayment) + ' ; '+str(lo) + ' ; '+ str(hi))
    if balance>0:
        lo=miniPayment
    else:
        hi=miniPayment
    miniPayment=(lo+hi)/2.0    
    Total = 0
    
print('Lowest Payment: ' + str(round(miniPayment,2)))
